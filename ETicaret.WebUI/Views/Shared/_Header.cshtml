                            <li><a class="dropdown-item" href="/Account/SignOut">Oturumu Kapat</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="dropdown">
                        <button class="dropdown-toggle nav-link text-dark" data-bs-toggle="dropdown" aria-expanded="false">
                            Giriş Yap
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Account/SignIn">Giriş</a></li>
