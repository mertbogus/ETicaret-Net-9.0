@model HomePageViewModel
@{
    ViewData["Title"] = "Anasayfa";
}

<partial name="_Slider" model="Model.Sliders"></partial>

<div>
    <h1> Sana Özel Ürünlerimiz</h1>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var item in Model.Productss)
        {
            <partial name="_ProductView" model="item"/>
        }
    </div>
</div>

<div>
    <h1>Kampanyalarımız</h1>
    <div class="row gx-4 gx-lg-5 row-cols-2 justify-content-center">
        @foreach (var item in Model.News)
        {
            <partial name="_NewsView" model="item" />
        }
    </div>
</div>