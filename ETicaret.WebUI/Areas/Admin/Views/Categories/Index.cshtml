@model IEnumerable<ETicaret.Core.Entities.Category>

@{
    ViewData["Title"] = "Kategori Listesi";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i>Yeni Kategori Ekle</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTabMenu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                 @item.CreateDate.ToShortDateString()
            </td>
            <td>
                    <img src="/Img/Categories/@Html.DisplayFor(modelItem => item.Image)" height="30" width="30" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTabMenu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a> |
                    <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@item.Id"><i class="fa-solid fa-bars"></i></a> |
                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id"><i class="fa-solid fa-xmark"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
